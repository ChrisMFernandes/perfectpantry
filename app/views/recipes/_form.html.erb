<div class="container">
		<div class="text-center">
			<%= bootstrap_form_for(@recipes, layout: :horizontal) do |f|%>
				      <div class="form-group">
            		<%= f.text_field :name, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :image_url, class: "form-control", :required => false %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :difficulty, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :servings, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_area :directions, class: "form-control", :required => true %> 
          		</div>
                
              <label>Ingredients:</label>
              <div class="ingredients">
                <div class="nested-fields form-inline">
                  <%= f.fields_for :ingredients do |builder| %>
                  <%= render "ingredient_fields", f: builder %>
                  <% end %>
              </div><br>
              <div class="form-actions">
                <%= link_to_add_association 'Add Ingredient', f, :ingredients, class: "btn btn-default", data: { association_insertion_node: ".ingredients", association_insertion_method: :append} %><br><br>
                <%= submit_tag "Add", class: "btn btn-default" %>
              </div>

		</div>
	<% end %>
</div>
</div>
