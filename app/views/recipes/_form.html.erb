<div class="container">
		<div class="text-center">
			<%= bootstrap_form_for(@recipes, layout: :horizontal) do |f|%>
				      <div class="form-group">
            		<%= f.text_field :name, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :image_url, class: "form-control", :required => false %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :difficulty, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_field :servings, class: "form-control", :required => true %>
          		</div>
          		<div class="form-group">
            		<%= f.text_area :directions, class: "form-control", :required => true %> 
          		</div>
                

                <%= f.fields_for :ingredients do |ff| %>
              <div class="form-group">
                <%= ff.text_field :name, class: "form-control", :required => true %>
              </div>
              <% end %>
		    <center><%= submit_tag "Add", class: "btn btn-default btn-primary" %></center>

		</div>
	<% end %>
</div>
